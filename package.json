  "devDependencies": {
    "@cucumber/cucumber": "^12.2.0",
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.3.0",
    "cucumber-html-reporter": "^7.2.0"
  },
  "dependencies": {
    "dotenv": "^17.2.2"
  }
}
